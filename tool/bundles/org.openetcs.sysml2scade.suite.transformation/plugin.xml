<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <menu
               id="org.openetcs.menu"
               label="openETCS">
            <command
                  commandId="org.openetcs.sysml2scade.suite.transformation.execute"
                  label="Generate SCADE Suite project"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.gmf.runtime.diagram.ui.DiagramEditorContextMenu?after=filtersMenu">
         <command
               commandId="org.openetcs.sysml2scade.suite.transformation.execute"
               label="Generate SCADE Suite project"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openetcs.sysml2scade.suite.transformation.PerformTransformationHandler"
            commandId="org.openetcs.sysml2scade.suite.transformation.execute">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <or>
                     <instanceof
                           value="org.eclipse.core.resources.IFile">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.papyrus.infra.onefile.model.IPapyrusFile">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.openetcs.sysml2scade.suite.transformation.isTransferable">
                     </test>
                  </or>
               </iterate>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.openetcs.sysml2scade.suite.transformation.ElementIsTransferableTester"
            id="org.openetcs.sysml2scade.suite.transformation.ElementIsTransferableTester"
            namespace="org.openetcs.sysml2scade.suite.transformation"
            properties="isTransferable"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
